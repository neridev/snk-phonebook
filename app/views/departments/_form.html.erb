<%= form_with(model: department) do |form| %>
  <% if department.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(department.errors.count, "error") %> prohibited this department from being saved:</h2>

      <ul>
        <% department.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="columns">
    <div class="column is-4">

      <div class="field">
        <%= form.label :name, "Odbor", class: "label" %>
        <div class="control">
          <%= form.text_field :name, class: "input" %>
        </div>
      </div>

      <div class="field">
        <%= form.label :section_id, "Oddelenie", class: "label" %>
        <div class="control">
          <div class="select">
            <%= form.select :section_id, Section.all.collect { |s| [ s.name, s.id ] } %>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control to-right">
          <%= form.submit "Uložiť odbor", class: "button is-info" %>
        </div>
      </div>
    
    </div>
  </div>
<% end %>
