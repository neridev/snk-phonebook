          <%= form.text_field :name, class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control to-right">
          <%= form.submit "Uložiť oddelenie", class: "button is-info" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
